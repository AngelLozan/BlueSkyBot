{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "es2016",
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "dist"
    },
    "include": ["**/*"],
    "exclude": ["dist"]
}